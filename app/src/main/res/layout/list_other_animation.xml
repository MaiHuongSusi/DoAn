<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListOtherAnimationActivity">

    <fragment
        android:id="@+id/arFragment"
        android:name="com.google.ar.sceneform.ux.ArFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/astronaut"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/astronaut" />

            <ImageView
                android:id="@+id/cow1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/cow1" />

            <ImageView
                android:id="@+id/fish"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/fish" />

            <ImageView
                android:id="@+id/hornet"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/hornet" />

            <ImageView
                android:id="@+id/mouse"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/mouse" />

            <ImageView
                android:id="@+id/skeleton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/skeleton" />
        </LinearLayout>
    </HorizontalScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="#212121"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingRight="20dp">

        <LinearLayout
            android:id="@+id/btnAnimation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_alignParentLeft="true"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/icon_play" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Animation"
                android:textColor="#ffffff" />
        </LinearLayout>
            <Button
                android:layout_centerHorizontal="true"
                android:id="@+id/record"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn_record" />

        <LinearLayout
            android:id="@+id/btnLoop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/icon_loop" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Loop"
                android:textColor="#ffffff" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
