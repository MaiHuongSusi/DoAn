<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mindorks.tensorflowexample.MainActivity">

    <GridLayout
        android:id="@+id/idGrid"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:columnCount="7"
        android:rowCount="1"
        android:layout_alignParentTop="true"
        android:background="#363636"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">
        <LinearLayout
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_columnSpan="3"
            android:background="@drawable/buttonshape"
            android:layout_gravity="left"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/nameResult"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Not Classify"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/imageSpeaker"
            android:layout_marginTop="15dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_columnSpan="1"
            android:background="@drawable/buttonshape"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_margin="10dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/speaker"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/imageDetail"
            android:layout_marginTop="15dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_columnSpan="1"
            android:background="@drawable/buttonshape"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_margin="10dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/detail"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/imageVideo"
            android:layout_marginTop="15dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_columnSpan="1"
            android:background="@drawable/buttonshape"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_margin="10dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/video"/>
        </LinearLayout>
    </GridLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_weight="4"
        android:layout_marginTop="50dp"
        android:padding="15dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:src="@drawable/noimage"/>
        <GridLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:columnCount="2"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnChooseImg"
                android:layout_width="150dp"
                android:layout_columnSpan="1"
                android:layout_height="40dp"
                android:textColor="#868686"
                android:background="@drawable/custom_gradien_button1"
                android:text="Choose" />
            <Button
                android:layout_marginLeft="20dp"
                android:id="@+id/btnDetect"
                android:layout_width="150dp"
                android:layout_columnSpan="1"
                android:textColor="#868686"
                android:layout_height="40dp"
                android:background="@drawable/custom_gradien_button1"
                android:text="Detect" />
        </GridLayout>

    </LinearLayout>

    <GridLayout
        android:layout_weight="0"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:columnCount="3"
        android:rowCount="1"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:background="#212121">
        <LinearLayout
            android:id="@+id/btnIdentify"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/identify"/>
            <TextView
                android:paddingTop="5dp"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="center_horizontal"
                android:text="Detect"
                android:textColor="#ffffff"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btnCapture"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/capture"/>
            <TextView
                android:paddingTop="5dp"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Capture"
                android:textColor="#ffffff"
                android:gravity="center_horizontal"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btnChoose"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/choose1"/>
            <TextView
                android:paddingTop="5dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center_horizontal"
                android:textColor="#0091F7"
                android:text="Choose"/>
        </LinearLayout>
    </GridLayout>

</LinearLayout>
