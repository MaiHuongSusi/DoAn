<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_choose"
    tools:context="com.mindorks.tensorflowexample.MainActivity">

    <GridLayout
        android:id="@+id/idGrid"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:columnCount="5"
        android:rowCount="1"
        android:layout_alignParentTop="true"
        android:background="#363636"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:background="@drawable/buttonshape"
            android:layout_gravity="left"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/nameResult"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Not Classify"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:background="@drawable/buttonshape"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_margin="10dp">
            <ImageView
                android:id="@+id/imageSpeaker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/speaker"
                android:onClick="onInit"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:background="@drawable/buttonshape"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_margin="10dp">
            <ImageView
                android:id="@+id/btnDes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/detail"
                android:onClick="onInit"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:background="@drawable/buttonshape"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_margin="10dp">
            <ImageView
                android:id="@+id/btnVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/detail"
                android:onClick="onInit"/>
        </LinearLayout>
    </GridLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_weight="4"
        android:padding="15dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="13dp"
            android:layout_marginBottom="127dp"
            android:src="@drawable/banana1" />

        <Button
            android:id="@+id/btnDetect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detect"/>

    </RelativeLayout>

    <GridLayout
        android:layout_weight="0"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:columnCount="3"
        android:rowCount="1"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:background="#212121">
        <LinearLayout
            android:id="@+id/btnIdentify"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/identify"/>
            <TextView
                android:paddingTop="5dp"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="center_horizontal"
                android:text="Detect"
                android:textColor="#ffffff"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btnCapture"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/capture"/>
            <TextView
                android:paddingTop="5dp"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Capture"
                android:textColor="#ffffff"
                android:gravity="center_horizontal"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btnChoose"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/choose1"/>
            <TextView
                android:paddingTop="5dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center_horizontal"
                android:textColor="#0091F7"
                android:text="Choose"/>
        </LinearLayout>
    </GridLayout>

</LinearLayout>
