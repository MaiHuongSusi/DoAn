<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mindorks.tensorflowexample">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />
    <!--
        <supports-gl-texture android:name="GL_OES_compressed_ETC1_RGB8_texture" />
    <supports-gl-texture android:name="GL_OES_compressed_paletted_texture" />
    -->
    <uses-feature
        android:name="android.hardware.camera.ar"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.ar.core"
            android:value="required" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainMenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".InstantDetectActivity"
            android:parentActivityName=".MainMenuActivity">
        </activity>
        <activity
            android:name=".CaptureActivity"
            android:parentActivityName=".MainMenuActivity">
        </activity>
        <activity
            android:name=".ChooseImageActivity"
            android:parentActivityName=".MainMenuActivity">
        </activity>
        <activity
            android:name=".ThreeDObjectActivity"
            android:parentActivityName=".MainMenuActivity">
        </activity>
        <activity
            android:name=".ListTopicActivity"
            android:parentActivityName=".ThreeDObjectActivity">
        </activity>
        <activity
            android:name=".ListAnimalActivity"
            android:parentActivityName=".ListTopicActivity">
        </activity>
        <activity
            android:name=".ListHomeActivity"
            android:parentActivityName=".ListTopicActivity">
        </activity>
        <activity
            android:name=".ListOceanActivity"
            android:parentActivityName=".ListTopicActivity">
        </activity>
        <activity
            android:name=".ListPlantActivity"
            android:parentActivityName=".ListTopicActivity">
        </activity>
        <activity
            android:name=".ListPersonActivity"
            android:parentActivityName=".ListTopicActivity">
        </activity>
        <activity
            android:name=".ListVehicleActivity"
            android:parentActivityName=".ListTopicActivity">
        </activity>
        <activity
            android:name=".ListAnimationActivity"
            android:parentActivityName=".ThreeDObjectActivity">
        </activity>
        <activity
            android:name=".SolarActivity"
            android:parentActivityName=".ListAnimationActivity">
        </activity>
        <activity
            android:name=".ListOtherAnimationActivity"
            android:parentActivityName=".ListAnimationActivity">
        </activity>
        <activity
            android:name=".TestRecycleView"
            android:parentActivityName=".ListTopicActivity">
        </activity>
        <activity
            android:name=".PlayVideoInArScene">
        </activity>
    </application>

</manifest>